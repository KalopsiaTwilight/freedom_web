@model FreedomWeb.ViewModels.Accounts.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @id = "FormRegister" }))
{
    <partial name="_CustomValidationSummary" model="ViewData.ModelState"></partial>
    @Html.AntiForgeryToken()
    <div class="row">
        <!--INPUT FIELDS-->
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.Username)
                <div class="input-group">
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control input-full" })
                    <span class="input-group-addon">@@freedom.com</span>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.DisplayName)
                @Html.TextBoxFor(m => m.DisplayName, new { @class = "form-control input-full" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.RegEmail)
                @Html.TextBoxFor(m => m.RegEmail, new { @class = "form-control input-full" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password, new { @class = "form-control input-full" })
            </div>
            <div class="form-group">               
                @Html.LabelFor(m => m.RepeatPassword)
                @Html.PasswordFor(m => m.RepeatPassword, new { @class = "form-control input-full" })
            </div>
            <button type="submit" class="btn btn-default">Register</button>
        </div>
        <!--HELP TEXT-->
        <div class="col-md-6">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <i class="fa fa-info-circle"></i>
                    <span>Register help</span>
                </div>
                <div class="panel-body">
                    <ul>
                        <li>
                            <b>Username</b> will be used to login on the website and the in-game server.
                            In-game username must be in form of "yourusername@freedom.com", however,
                            website's login does not need "@@freedom.com" bit (it's added automatically).
                            <u>Username cannot be changed later on!</u>
                        </li>
                        <li>
                            <b>Display name</b> will be used as your identity on the website for the public instead of your username.
                            Only the administration team will be able to see your username on the website.        
                        </li>
                        <li>
                            <b>Email address</b> will be used for password recovery.
                        </li>
                        <li>
                            <b>Password</b> must be at least 8 characters long.
                        </li>
                        <li>
                            If you have any registration problems, then contact the developers or the staff on the
                            <a href="https://wowfreedom-rp.com/f/">WoW Freedom Forums &raquo;</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
}
