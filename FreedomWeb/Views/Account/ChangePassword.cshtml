@model FreedomWeb.ViewModels.Accounts.ChangePasswordViewModel
@{
    ViewBag.Title = "Change password";
}

<div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { @id = "FormChangePassword" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-group mb-3">
                @Html.LabelFor(m => m.CurrentPassword, htmlAttributes: new { @class = "form-label" })
                <div class="input-group">
                    @Html.PasswordFor(m => m.CurrentPassword, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group mb-3">
                @Html.LabelFor(m => m.NewPassword, htmlAttributes: new { @class = "form-label" })
                <div class="input-group">
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group mb-3">
                @Html.LabelFor(m => m.RepeatPassword, htmlAttributes: new { @class = "form-label" })
                <div class="input-group">
                    @Html.PasswordFor(m => m.RepeatPassword, new { @class = "form-control" })
                </div>
            </div>
            <button type="submit" class="btn btn-dark">Submit</button>
        }
    </div>
    <div class="col-md-6">
        <h4 class="p-2 bg-dark mb-0 rounded-top text-white">
            <i class="fa fa-info-circle me-1"></i>
            Change password help
        </h4>
        <div class="p-3 bg-secondary text-dark rounded-bottom" style="--bs-bg-opacity: 0.2">
            <p>
                This password is used to access all of your game accounts as well as the minimanager itself.
            </p>
            <p>
                <b>New password</b> must be at least 8 characters long.
            </p>
        </div>
    </div>
</div>