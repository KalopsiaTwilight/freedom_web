<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - WoW Freedom Mini-manager</title>
    <link rel="stylesheet" href="~/css/bundle.css" />
    <script src="~/js/modernizr" ></script>
</head>
<body>
    <partial name="_TopNav"></partial>
    <div class="container-fluid body-content">
        <div class="row">
            <div class="col-md-3">
                <partial name="_SideBarNav"></partial>
            </div>
            <div class="col-md-9">
                <partial name="_Alerts"></partial>
                <div class="main panel panel-default">
                    <div class="panel-heading">
                        <h3>@ViewBag.Title</h3>
                    </div>
                    <div class="panel-body">
                        @RenderBody()
                    </div>
                </div>  
            </div>
        </div>                            
    </div>

    <footer id="mainFooter">
        <partial name="_Footer"></partial>
    </footer>

    <script src="~/js/jquery"></script>
        @Html.RenderUnobtrusiveAjaxScript()
    <script src="~/js/jqueryDateFormat"></script>
    <script src="~/js/bootstrap"></script>
    <script src="~/js/dataTables"></script>
    <script src="~/js/bootstrapSelect"></script>
    <script src="~/js/freedom"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
