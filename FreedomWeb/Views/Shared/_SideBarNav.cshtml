@{
    Layout = null;
}
<div class="panel panel-default sidebar">
    <div class="panel-heading">
        <a href="#"><strong><i class="fa fa-wrench"></i> Mini-manager</strong></a>
    </div>
    <div class="panel-body">
        <!-- Left column -->
        <ul class="nav nav-stacked">
            <li class="nav-header panel panel-default">
                <div class="btn panel-heading" data-toggle="collapse" data-target="#menuSubGeneral">
                    <i class="glyphicon glyphicon-home"></i>
                    <span>General</span>
                    <i class="glyphicon glyphicon-chevron-right pull-right chevron-toggle"></i>
                </div>
                <div class="panel-body collapse" id="menuSubGeneral">
                    <ul class="nav nav-stacked">
                        @if (this.User.Identity.IsAuthenticated)
                        {
                            <li>
                                <a href="@Url.Action("Logout", "Account")"><i class="glyphicon glyphicon-log-out"></i> Logout (@User.Identity.Name)</a>
                            </li>
                        }
                        else
                        {
                            <li>
                                <a href="@Url.Action("Login", "Account")"><i class="glyphicon glyphicon-log-in"></i> Login</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Register", "Account")"><i class="glyphicon glyphicon-edit"></i> Register</a>
                            </li>
                        }
                        <li>
                            <a href="@Url.Action("Status", "Home")"><i class="glyphicon glyphicon-stats"></i> Status</a>
                        </li>
                    </ul>
                </div>
            </li>
            @if (User.Identity.IsAuthenticated)
            {
                <li class="nav-header panel panel-default">
                    <div class="btn panel-heading" data-toggle="collapse" data-target="#menuSubAccount">
                        <i class="glyphicon glyphicon-user"></i>
                        <span>Account - @User.Identity.Name</span>
                        <i class="glyphicon glyphicon-chevron-right pull-right chevron-toggle"></i>
                    </div>
                    <div class="panel-body collapse" id="menuSubAccount">
                        <ul class="nav nav-stacked">
                            <li>
                                <a href="@Url.Action("ShowProfile", "Account")"><i class="glyphicon glyphicon-user"></i> My profile</a>
                            </li>
                            <li>
                                <a href="@Url.Action("ChangeDisplayName", "Account")"><i class="glyphicon glyphicon-edit"></i> Change display name</a>
                            </li>
                            <li>
                                <a href="@Url.Action("ChangePassword", "Account")"><i class="glyphicon glyphicon-edit"></i> Change password</a>
                            </li>
                            <li>
                                <a href="@Url.Action("ChangeEmail", "Account")"><i class="glyphicon glyphicon-edit"></i> Change email</a>
                            </li>
                            <li>
                                <a href="@Url.Action("CharacterTransfer", "Character")"><i class="glyphicon glyphicon-transfer"></i> Character transfer</a>
                            </li>
                        </ul>
                    </div>
                </li>
                <li class="nav-header panel panel-default">
                    <div class="btn panel-heading" data-toggle="collapse" data-target="#menuSubServerDatabase">
                        <i class="fa fa-database"></i>
                        <span>Server database</span>
                        <i class="glyphicon glyphicon-chevron-right pull-right chevron-toggle"></i>
                    </div>
                    <div class="panel-body collapse" id="menuSubServerDatabase">
                        <ul class="nav nav-stacked">
                            <!--<li>
                                <a href="@Url.Action("SearchCustomItems", "Server")"><i class="glyphicon glyphicon-search"></i> Search custom items</a>
                            </li>-->
                            <li>
                                <a href="@Url.Action("SearchGameobjects", "Server")"><i class="glyphicon glyphicon-search"></i> Search gameobjects (WIP)</a>
                            </li>
                            <li>
                                <a href="@Url.Action("CommandList", "Server")"><i class="glyphicon glyphicon-search"></i> In-game command list</a>
                            </li>
                        </ul>
                    </div>
                </li>
                if (User.IsInRole(FreedomLogic.Identity.FreedomRole.RoleAdmin))
                {
                    <li class="nav-header panel panel-default">
                        <div class="btn panel-heading" data-toggle="collapse" data-target="#menuSubAdmin">
                            <i class="glyphicon glyphicon-flag"></i>
                            <span>Administration</span>
                            <i class="glyphicon glyphicon-chevron-right pull-right chevron-toggle"></i>
                        </div>
                        <div class="panel-body collapse" id="menuSubAdmin">
                            <ul class="nav nav-stacked">
                                <li>
                                    <a href="@Url.Action("Index", "Admin")"><i class="fa fa-pie-chart"></i> Overview</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("UserList", "Admin")"><i class="fa fa-users"></i> User account list</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("ServerControl", "Admin")"><i class="fa fa-gears"></i> Server control</a>
                                </li>
                            </ul>
                        </div>
                    </li>
                }
            }
        </ul>
    </div>
</div>

