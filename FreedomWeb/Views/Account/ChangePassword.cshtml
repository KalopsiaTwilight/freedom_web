@model FreedomWeb.ViewModels.Accounts.ChangePasswordViewModel
@{
    ViewBag.Title = "Change password";
}
@using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { @id = "FormChangePassword" }))
{
    <partial name="_CustomValidationSummary" model="ViewData.ModelState"></partial>
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <i class="fa fa-info-circle"></i>
                    <span>Change password help</span>
                </div>
                <div class="panel-body">
                    <ul>
                        <li>
                            <b>New password</b> must be at least 8 characters long.
                        </li>
                    </ul>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.CurrentPassword)
                @Html.PasswordFor(m => m.CurrentPassword, new { @class = "form-control input-full" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.NewPassword)
                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control input-full" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.RepeatPassword)
                @Html.PasswordFor(m => m.RepeatPassword, new { @class = "form-control input-full" })
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        </div>
    </div>
}