@model FreedomWeb.ViewModels.Admin.SetGameAccessViewModel
@{
    ViewBag.Title = "Set game access";
}
@using (Html.BeginForm("SetGameAccess", "Admin", FormMethod.Post, new { @id = "FormSetGameAccess" }))
{
    <partial name="_CustomValidationSummary" model="ViewData.ModelState"></partial>
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.GameAccId)
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.Username)
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control input-full", @disabled = "true" })
                @Html.HiddenFor(m => m.Username)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.AccountAccess)
                <div>
                    @Html.DropDownListFor(m => m.AccountAccess, Model.GMLevelList, new { @class = "selectpicker" })
                </div>
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        </div>
        <div class="col-md-6">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <i class="fa fa-info-circle"></i>
                    <span>Set game access help</span>
                </div>
                <div class="panel-body">
                    <ul>
                        <li>
                            When GMLevel/Game access is changed for an account, then the affected account needs to do full relog
                            (disconnect from in-game until username/password screen and relog).
                        </li>
                        <li>
                            GMLevel ranks are the following:
                            <ul>
                                <li><b>GMLevel = Player (0):</b> Normal player rank. Default GMLevel for newly registered members.</li>
                                <li><b>GMLevel = Moderator (1):</b> Storyteller rank. Has access to spawning commands and few other extended commands not available to players.</li>
                                <li><b>GMLevel = GameMaster (2):</b> GM rank. Has access to all non-development commands, including administration commands such as .ban, .mute and etc.</li>
                                <li><b>GMLevel = Admin (3):</b> Admin rank. Besides having GameMaster commands it has debugging commands and other commands what interact with internal systems of the server.</li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
}
