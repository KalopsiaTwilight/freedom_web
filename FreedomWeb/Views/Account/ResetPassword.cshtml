@model FreedomWeb.ViewModels.Accounts.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
}
@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @id = "FormResetPassword" }))
{
    @Html.Partial("~/Views/Shared/_CustomValidationSummary.cshtml", ViewData.ModelState)
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.UserId)
    @Html.HiddenFor(model => model.ResetToken)
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <i class="fa fa-info-circle"></i>
                    <span>Reset password help</span>
                </div>
                <div class="panel-body">
                    <ul>
                        <li>
                            <b>New password</b> must be at least 8 characters long.
                        </li>
                    </ul>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.NewPassword)
                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control input-full" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.RepeatPassword)
                @Html.PasswordFor(m => m.RepeatPassword, new { @class = "form-control input-full" })
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        </div>
    </div>
}