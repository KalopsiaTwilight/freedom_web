@model FreedomWeb.ViewModels.Admin.SetGameAccessViewModel
@{
    ViewBag.Title = "Set game access";
}
@using (Html.BeginForm("SetGameAccess", "Admin", FormMethod.Post, new { @id = "FormSetGameAccess" }))
{
    <partial name="_CustomValidationSummary" model="ViewData.ModelState"></partial>
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.GameAccId)
    <div class="row">
        <div class="col-md-6">
            <div class="form-group mb-3">
                @Html.LabelFor(m => m.Username, htmlAttributes: new { @class = "form-label" })
                <div class="input-group">
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control", disabled = true })
                </div>
                @Html.HiddenFor(m => m.Username)
            </div>
            <div class="form-group mb-3">
                @Html.LabelFor(m => m.AccountAccess, htmlAttributes: new { @class = "form-label" })
                <div class="input-group">
                    @Html.DropDownListFor(m => m.AccountAccess, Model.GMLevelList, new { @class = "form-select" })
                </div>
            </div>
            <button type="submit" class="btn btn-dark">Submit</button>
        </div>
        <div class="col-md-6">
            <h4 class="p-2 bg-dark mb-0 rounded-top text-white">
                <i class="fa fa-info-circle me-1"></i>
                Set game access help
            </h4>
            <div class="p-3 bg-secondary text-dark rounded-bottom" style="--bs-bg-opacity: 0.2">
                <p>
                    When the GMLevel/Game access is changed for an account, the affected account will need to do full relog
                    (disconnect from in-game until username/password screen and log back in).
                </p>
                <p>
                    GMLevel ranks are the following:
                    <ul>
                        <li><b>GMLevel = Player (0):</b> Normal player rank. Default GMLevel for newly registered members.</li>
                        <li><b>GMLevel = Moderator (1):</b> Storyteller rank. Has access to spawning commands and few other extended commands not available to players.</li>
                        <li><b>GMLevel = GameMaster (2):</b> GM rank. Has access to all non-development commands, including administration commands such as .ban, .mute and etc.</li>
                        <li><b>GMLevel = Admin (3):</b> Admin rank. Besides having GameMaster commands it has debugging commands and other commands that interact with internal systems of the server.</li>
                    </ul>
                </p>
            </div>
        </div>
    </div>
}
