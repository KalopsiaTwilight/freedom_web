@model FreedomWeb.ViewModels.Accounts.ChangeEmailViewModel
@{
    ViewBag.Title = "Change email";
}

<div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm("ChangeEmail", "Account", FormMethod.Post, new { @id = "FormChangeEmail" }))
        {
            <partial name="_CustomValidationSummary" model="ViewData.ModelState"></partial>
            @Html.AntiForgeryToken()
            <div class="form-group mb-3">
                @Html.LabelFor(m => m.Email, htmlAttributes: new { @class = "form-label" })
                <div class="input-group">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
            </div>
            <button type="submit" class="btn btn-dark">Submit</button>
        }
    </div>
    <div class="col-md-6">
        <h4 class="p-2 bg-dark mb-0 rounded-top text-white">
            <i class="fa fa-info-circle me-1"></i>
            Change email help
        </h4>
        <div class="p-3 bg-secondary text-dark rounded-bottom" style="--bs-bg-opacity: 0.2">
            <p>
                <b>Remember!</b> Your email address is used for password recovery, so it should be a valid email address.
            </p>
        </div>
    </div>
</div>