@using reCAPTCHA.MVC
@model FreedomWeb.ViewModels.Accounts.LoginViewModel
@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @id = "FormLogin" }))
{
    @Html.Partial("~/Views/Shared/_CustomValidationSummary.cshtml", ViewData.ModelState)
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.ReturnUrl)
    <div class="row">        
        <!--INPUT FIELDS-->
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.Username)
                <div class="input-group">
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control input-full" })
                    <span class="input-group-addon">@@freedom.com</span>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password, new { @class = "form-control input-full" })
            </div>
            <div class="checkbox">
                <label>
                    @Html.EditorFor(m => m.RememberMe)
                    @Html.DisplayNameFor(m => m.RememberMe)
                </label>  
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        </div>
        <!--HELP TEXT-->  
        <div class="col-md-6">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <i class="fa fa-info-circle"></i>
                    <span>Login help</span>
                </div>
                <div class="panel-body">
                    <ul>
                        <li>Note: You do not need to add "@@freedom.com" to your username here. It is added automatically for you.</li>
                        <li><a href="@Url.Action("ForgotPassword", "Account")">Forgot your password? Click here &raquo;</a></li>
                        <li>
                            If you have further login problems, then contact the developers or the staff on the
                            <a href="http://w11.zetaboards.com/WoW_Freedom/index/">WoW Freedom Forums &raquo;</a>
                        </li>                      
                    </ul>
                </div>
            </div>
        </div>
    </div>
}
