@model FreedomWeb.ViewModels.Admin.BanGameAccountsViewModel
@{
    ViewBag.Title = "Set game access";
}
@using (Html.BeginForm("BanAccounts", "Admin", FormMethod.Post, new { @id = "FormBanAccounts" }))
{
    <partial name="_CustomValidationSummary" model="ViewData.ModelState"></partial>
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.BnetAccountId)
    @Html.HiddenFor(m => m.UserId)
    <div class="row">
        <div class="col-md-6">
            <div class="form-group mb-3">
                @Html.LabelFor(m => m.Username, htmlAttributes: new { @class = "form-label" })
                <div class="input-group">
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control", disabled = true })
                </div>
                @Html.HiddenFor(m => m.Username)
            </div>
            <div class="form-group mb-3">
                @Html.LabelFor(m => m.Reason, htmlAttributes: new { @class = "form-label" })
                <div class="input-group">
                    @Html.TextBoxFor(m => m.Reason, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group mb-3">
                @Html.LabelFor(m => m.Duration, htmlAttributes: new { @class = "form-label" })
                <div class="input-group">
                    @Html.DropDownListFor(m => m.Duration, Model.BanDurationList, new { @class = "form-select" })
                </div>
            </div>
            <button type="submit" class="btn btn-dark">Submit</button>
        </div>
    </div>
}
